    <style name="Mangerica.S" parent="Mangerica">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Mangerica.Regular.Xs" parent="BaseText">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/ndiscover_mangerica_pro_regular</item>
    </style>

    <style name="Mangerica.Regular.S" parent="BaseText">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/ndiscover_mangerica_pro_regular</item>
