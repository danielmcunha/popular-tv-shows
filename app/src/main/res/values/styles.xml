<resources>

    <style name="BaseText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="Mangerica">
        <item name="android:fontFamily">@font/ndiscover_mangerica_pro_regular</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="Mangerica.Light">
        <item name="android:fontFamily">@font/ndiscover_mangerica_pro_light</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="Mangerica.Light.Xs" parent="Mangerica.Light">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Mangerica.Light.S" parent="Mangerica.Light">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Mangerica.Xs" parent="Mangerica">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Mangerica.Xs.White" parent="Mangerica.Xs">
        <item name="android:textColor">@color/white</item>
