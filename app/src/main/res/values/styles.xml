    <style name="Mangerica.Regular.M" parent="BaseText">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/ndiscover_mangerica_pro_regular</item>
    </style>
    <style name="Mangerica.Bold.Xs" parent="BaseText">
        <item name="android:fontFamily">@font/ndiscover_mangerica_pro_bold</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Mangerica.Bold.M" parent="BaseText">
        <item name="android:fontFamily">@font/ndiscover_mangerica_pro_bold</item>
        <item name="android:textSize">16sp</item>
    </style>

